swiper{
    min-height:500px;
}
swiper-item{
    font-size:30rpx;
}
swiper-item view{
    padding:20rpx;
}
swiper-item .answer .wx-radio-input,
swiper-item .answer .wx-checkbox-input{
    width:26rpx;
    height:26rpx;
}
swiper-item .answer .radio,swiper-item .answer .checkbox{
    display:block;
}
.arrow{
    display:inline-block;
    position:fixed;
    bottom:0;
}
.prev{
    left:0;
}
.next{
    right:0;
}
.jiaojuan{
  position:fixed;
  bottom:0;
  background:transparent;
  width:100%;
  text-align:center;
}